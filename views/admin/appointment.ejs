            <td class="text-warning fw-bold"><%= row.appointment %></td>
            <td>
                <a href="/admin/appointment_accepted/<%= row.appointment_id %>" class="btn btn-success">Accept</a>
                <a href="/admin/appointment_rejected/<%= row.appointment_id %>" class="btn btn-danger">Rejected</a>
            </td>
