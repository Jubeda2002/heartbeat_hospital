<%-include("navbar.ejs"); %>
<div class="row">
    <div class="col-12">
        <form action="review_details" method="post" class="review_form" enctype="multipart/form-data">
            <!-- <h1 class="h3 mb-3"><strong>Add</strong> Doctors Details</h1> -->
            <h5>Patient Image</h5>
            <input type="file" name="patient_image" class="form-control">
             <br>       
            <h5>Patient Name </h5>
                 <input type="text" name="patient_name" class="form-control" placeholder="Patient Name">
                 <br>
                 <h5>Date</h5>
                    <input type="date" name="date" class="form-control" placeholder="date">
                    <br>
                   
                    
                    <h5> Description</h5>
                    <textarea name="description" class="form-control" placeholder="Description"></textarea>
                    <br>
                    <button class="btn btn-lg btn-primary" type="submit">Add Review</button>
            </form>
            </div>
        </div>
        <br>
      
      <table>
        <tr>
            <th> ID</th>
            <th>Patient Image</th>
            <th>Patient Name</th>
            <th>Date</th>
            <!-- <th>Rating</th> -->
            <th>Description</th>
            <th>Action</th>
        </tr>
        <% review.map(function(row,i){ %>
        <tr>
            <td><%= i+1%></td>
            <td><img src="/admin_assets/home/<%= row.patient_image %>" style="width: 100px; height: 100px;"></td>
            <td><%= row.patient_name %></td>
            <td><%= row.date %></td>
            <!-- <td><%= row.rating %></td> -->
            <td><%= row.description %></td>
            <td>
                <td>
                    <a href="/admin/review_edit/<%= row.review_id%>" class="btn btn-primary">Edit</a>
                    <a href="/admin/review_delete/<%= row.review_id%>" class="btn btn-danger" 
                       onclick="return confirm('Are you sure you want to delete this record?');">
                       Delete
                    </a>
                </td>
                
            </td>
        </tr>
        <% }); %>
      </table>

     
