<%-include("navbar.ejs"); %>
<div class="row">
    <div class="col-12">
        <form action="heart_details" method="post" class="heart_form" enctype="multipart/form-data">
            <!-- <h1 class="h3 mb-3"><strong>Add</strong> Doctors Details</h1> -->
            <h5>Heart Image</h5>
            <input type="file" name="heart_image" class="form-control">
             <br>       
            <h5>Heart Title</h5>
                 <input type="text" name="heart_title" class="form-control" placeholder="Heart Title">
                 <br>
        
                     <h5> Heart Description</h5>
                    <textarea name="heart_description" class="form-control" placeholder="Heart Description"></textarea>
                    <br>
                    <button class="btn btn-lg btn-primary" type="submit">Add </button>
            </form>
            </div>
        </div>
        <br>
      
      <table>
        <tr>
            <th> ID</th>
            <th>Heart Image</th>
            <th>Heart Name</th>
            <th>Heart Description</th>
            <th>Action</th>
        </tr>
        <% heart.map(function(row,i){ %>
        <tr>
            <td><%= i+1%></td>
            <td><img src="/admin_assets/home/<%= row.heart_image %>" style="width: 100px; height: 100px;"></td>
            <td><%= row.heart_title %></td>
            <td><%= row.heart_description %></td>
            <td>
                <td>
                  
                    <a href="/admin/heart_delete/<%= row.heart_id%>" class="btn btn-danger" 
                       onclick="return confirm('Are you sure you want to delete this record?');">
                       Delete
                    </a>
                </td>
                
            </td>
        </tr>
        <% }); %>
      </table>

     
