<%-include("navbar.ejs"); %>
<div class="row">
    <div class="col-12">
        <form action="contact_details" method="post" class="contact_details" enctype="multipart/form-data">
            <h5>
                Address
           </h5>
           <input type="text" class="form-control" name="contact_address" placeholder="Contact Address" required>
           <br>
           <h5>
            Email
            </h5>
             <input type="text" class="form-control" name="contact_email" placeholder="Contact Email" required>
             <br>
            <h5>
                Contact Number
            </h5>
            <input type="number" class="form-control" name="contact_number" placeholder="Contact Number" required>
            <br>
           <button class="btn btn-lg btn-primary" type="submit">Submit</button>
    </form>

<br>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Contact ID</th>
            <th>Contact Address</th>
            <th>Contact Email</th>
            <th>Contact Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% contact.map(function(row,i){ %>
        <tr>
            <td><%= i+1 %></td>
            <td><%= row.contact_address %></td>
            <td><%= row.contact_email %></td>
            <td><%= row.contact_number %></td>
           <td>
                <td>
                    <a href="/admin/contact_edit/<%= row.contact_id %>" class="btn btn-primary">Edit</a>
                    <hr>
                    <a href="/admin/contact_delete/<%= row.contact_id %>" class="btn btn-danger" 
                       onclick="return confirm('Are you sure you want to delete this contact?');">
                       Delete
                    </a>
                </td>
                
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
</div>
</div>
<%-include("footer.ejs"); %>

