
<%-include("navbar.ejs"); %>
<div class="row">
    <div class="col-12">
        <form action="faq_details" method="post" class="faq_control" enctype="multipart/form-data">
         
<h5>Faq Question</h5>
<input type="text" name="faq_question" class="form-control" placeholder="Faq Question">
<br>
<h5>Faq Answer</h5>
<input type="text" name="faq_Answer" class="form-control" placeholder="Faq Answer">
<br>
           <button class="btn btn-lg btn-primary" type="submit">Submit</button>
    </form>

<br>

<table class="table table-striped">
    <thead>
        <tr>
            <th>FAQ ID</th>
            <th>Faq Question</th>
            <th>Faq Answer</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% faq.map(function(row,i){ %>
        <tr>
            <td><%= i+1 %></td>
            <td><%= row.faq_question %></td>
            <td><%= row.faq_Answer %></td>
               <td>
                <td>
                    <a href="/admin/faq_edit/<%= row.faq_id %>" class="btn btn-primary">Edit</a>
                    <hr>
                    <a href="/admin/faq_delete/<%= row.faq_id %>" class="btn btn-danger" 
                       onclick="return confirm('Are you sure you want to delete this faq?');">
                       Delete
                    </a>
                </td>
                
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
</div>
</div>
<%-include("footer.ejs"); %>

