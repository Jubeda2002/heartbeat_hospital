<%-include("navbar.ejs"); %>
<div class="row">
    <div class="col-12">
        <form action="about_details" method="post" class="about_form" enctype="multipart/form-data">
            <!-- <h1 class="h3 mb-3"><strong>Add</strong> Doctors Details</h1> -->
            <h5>Mission Title</h5>
            <input type="text" name="mission_title" class="form-control" placeholder="Mission Title">
            <br>   
            <h5>Mission Description</h5>
            <textarea name="mission_description" class="form-control" placeholder="Mission Description"></textarea>
            <br>
            <h5>Vision Title</h5>
            <input type="text" name="vision_title" class="form-control" placeholder="Vision Title">
            <br>   
            <h5>Vision Description</h5>
            <textarea name="vision_description" class="form-control" placeholder="Vision Description"></textarea>
            <br>
            <h5>Doctor Location</h5>
            <input type="text" name="doctor_location" class="form-control" placeholder="Doctor Location">
            <br>
            <h5>Doctor Name</h5>
               <input type="text" name="doctor_name" class="form-control" placeholder="Doctor Name">
               <br>
               <h5>Doctor Position</h5>
                    <input type="text" name="doctor_position" class="form-control" placeholder="Doctor Position">
                    <br>
               <h5>Doctor Description</h5>
               <input type="text" name="doctor_description" class="form-control" placeholder="Doctor Description">
               <br>
               <h5>Doctor Image</h5>
               <input type="file" name="doctor_image" class="form-control">
                <br> 
                <h5>Hospital Image</h5>
               <input type="file" name="hospital_image" class="form-control">
                <br> 

                <h5>Hospital Title</h5>
                <input type="text" name="hospital_title" class="form-control" placeholder="Hospital Title">
                <br>
           <h5>Hospital Description</h5>
           <input type="text" name="hospital_description" class="form-control" placeholder="Hospital Description">
           <br>
         
                    <button class="btn btn-lg btn-primary" type="submit">Submit</button>
            </form>
            </div>
        </div>
        <br>
       
      <table>
        <tr>
            <th>About ID</th>
            <th>Mission Title</th>
            <th>Mission Description</th>
            <th>Vision Title</th>
            <th>Vision Description</th>
            <th>Doctor Location</th>
            <th>Doctor Name</th>
            <th>Doctor Position</th>
            <th>Doctor Description</th>
            <th>Doctor Image</th>
            <th>Hospital Image</th>
            <th>Hospital Title</th>
           
            <th>Action</th>
        </tr>
        <% about.map(function(row,i){ %>          
        <tr>
            <td><%= i+1%></td>
            <td><%= row.mission_title %></td>
            <td><%= row.mission_description %></td>
            <td><%= row.vision_title %></td>
            <td><%= row.vision_description %></td>
            <td><%= row.doctor_location %></td>
            <td><%= row.doctor_name %></td>
            <td><%= row.doctor_position %></td>
            <td><%= row.doctor_description %></td>
            <td><img src="/admin_assets/about/<%= row.doctor_image %>" style="width: 100px; height: 100px;"></td> 
            <td><img src="/admin_assets/about/<%= row.hospital_image %>" style="width: 100px; height: 100px;"></td> 
            <td><%= row.hospital_title %></td>
            <td><%= row.hospital_description %></td>
       
         
            <td>
                <td>
                    <a href="/admin/about_edit/<%= row.about_id%>" class="btn btn-primary">Edit</a>
                    <a href="/admin/about_delete/<%= row.about_id%>" class="btn btn-danger" 
                       onclick="return confirm('Are you sure you want to delete this record?');">
                       Delete
                    </a>
                </td>
                
            </td>
        </tr>
        <% }); %>
      </table>

     
